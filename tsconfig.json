{
	"compileOnSave": true,
	"compilerOptions": {
		"baseUrl": ".",
		"target": "esnext",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"lib": [
			"esnext",
			"dom"
		],
		"types": [
			"vite/client",
		],
		"paths": {
			"@/*": [
				"src/*"
			],
		},
		"checkJs": true,
		"noImplicitAny": false
	},
	"include": [
		"src/**/*.ts",
		"src/**/*.d.ts",
		"src/**/*.tsx",
		"src/**/*.vue",
		"vite.config.ts"
	],
	"exclude": [
		"node_modules",
		"**/*.spec.ts"
	]
}